{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DescribeAllowed",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "ec2:CreateTags",
        "ec2:DeleteTags",
        "ec2:ModifyVpcAttribute"
      ],
      "Resource": "*"
    },
    {
      "Sid": "VPCScopedActions",
      "Effect": "Allow",
      "Action": [
        "ec2:CreateSubnet",
        "ec2:DeleteSubnet",
        "ec2:ModifySubnetAttribute",
        "ec2:CreateRouteTable",
        "ec2:DeleteRouteTable",
        "ec2:AssociateRouteTable",
        "ec2:DisassociateRouteTable",
        "ec2:CreateRoute",
        "ec2:DeleteRoute",
        "ec2:CreateInternetGateway",
        "ec2:AttachInternetGateway",
        "ec2:DetachInternetGateway",
        "ec2:DeleteInternetGateway",
        "ec2:CreateSecurityGroup",
        "ec2:DeleteSecurityGroup",
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:AuthorizeSecurityGroupEgress",
        "ec2:RevokeSecurityGroupIngress",
        "ec2:RevokeSecurityGroupEgress",
        "ec2:CreateNetworkInterface",
        "ec2:DeleteNetworkInterface",
        "ec2:AttachNetworkInterface",
        "ec2:DetachNetworkInterface"
      ],
      "Resource": [
        "arn:aws:ec2:us-east-1:269825205299:vpc/vpc-00f8063e32ad4028f",
        "arn:aws:ec2:us-east-1:269825205299:subnet/subnet-0e54301ff8344a0d0",
        "arn:aws:ec2:us-east-1:269825205299:subnet/subnet-0c9af35d48d1bfef5",
        "arn:aws:ec2:us-east-1:269825205299:subnet/subnet-0e8a14dea936fb3e4",
        "arn:aws:ec2:us-east-1:269825205299:subnet/subnet-03210a0f1956f14cc",
        "arn:aws:ec2:us-east-1:269825205299:security-group/sg-0c419a353d338ec02",
        "arn:aws:ec2:us-east-1:269825205299:route-table/rtb-075b1e4f8ea8b08f0",
        "arn:aws:ec2:us-east-1:269825205299:route-table/rtb-0ef7044435cc9b652"
      ]
    },
    {
      "Sid": "PassRoleLimited",
      "Effect": "Allow",
      "Action": [ "iam:PassRole" ],
      "Resource": [
        "arn:aws:iam::269825205299:role/*"
      ]
    },
    {
      "Sid": "StateBackendAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::upskill-terraform-state-ak-2025",
        "arn:aws:s3:::upskill-terraform-state-ak-2025/*"
      ]
    },
    {
      "Sid": "DynamoDBAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:UpdateItem"
      ],
      "Resource": "arn:aws:dynamodb:us-east-1:269825205299:table/upskill-terraform-locks"
    }
  ]
}
